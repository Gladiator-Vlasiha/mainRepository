<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.komandor.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="600.0" prefWidth="800.0">
      <children>
          <Button alignment="BASELINE_RIGHT" contentDisplay="RIGHT" layoutX="678.0" layoutY="480.0" onAction="#onPayButtonClick" text="Оплатить.">
            <font>
               <Font size="14.0" />
            </font>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </Button>
         <TextField fx:id="searchField" layoutX="214.0" layoutY="28.0" onAction="#onSearchInput" onKeyTyped="#searchGoods" prefHeight="25.0" prefWidth="342.0" promptText="Название товара" />
         <TableView fx:id="tableView" layoutX="11.0" layoutY="79.0" prefHeight="200.0" prefWidth="739.0">
           <columns>
             <TableColumn fx:id="columnName" prefWidth="657.0" text="Название" />
             <TableColumn fx:id="columnPrice" text="цена" />
           </columns>
         </TableView>
         <TableView fx:id="basket" layoutX="14.0" layoutY="309.0" prefHeight="200.0" prefWidth="664.0">
           <columns>
             <TableColumn fx:id="nameInBasket" prefWidth="467.0" text="название" />
             <TableColumn fx:id="priceInBasket" prefWidth="72.0" text="цена/шт" />
               <TableColumn fx:id="countInBasket" prefWidth="48.0" text="кол-во" />
               <TableColumn fx:id="totalInBasket" prefWidth="76.0" text="итого" />
           </columns>
         </TableView>

      </children>
   </AnchorPane>

    <Label fx:id="welcomeText" />
</VBox>
